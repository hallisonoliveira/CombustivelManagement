<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbr_new_average_consumption"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/txv_new_average_consumption_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/average_consumption_date"/>

        <EditText
            android:id="@+id/edt_new_average_consumption_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_new_average_consumption_date"
            style="@style/style_editText"
            android:maxLength="10"
            android:inputType="date"
            android:editable="true" />

        <TextView
            android:id="@+id/txv_new_average_consumption_amount_liters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_new_average_consumption_date"
            android:text="@string/average_consumption_amount_liters"/>

        <EditText
            android:id="@+id/edt_new_average_consumption_amount_liters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_new_average_consumption_amount_liters"
            android:inputType="numberDecimal"
            style="@style/style_editText"/>

        <TextView
            android:id="@+id/txv_new_average_consumption_price_by_liter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_new_average_consumption_amount_liters"
            android:text="@string/average_consumption_price_by_liter"/>

        <EditText
            android:id="@+id/edt_new_average_consumption_price_by_liter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_new_average_consumption_price_by_liter"
            android:inputType="numberDecimal"
            style="@style/style_editText"/>

        <TextView
            android:id="@+id/txv_new_average_consumption_kilometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_new_average_consumption_price_by_liter"
            android:inputType="numberDecimal"
            android:text="@string/average_consumption_kilometer"/>

        <EditText
            android:id="@+id/edt_new_average_consumption_kilometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_new_average_consumption_kilometer"
            android:inputType="numberDecimal"
            style="@style/style_editText"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_save_average_comsumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>

