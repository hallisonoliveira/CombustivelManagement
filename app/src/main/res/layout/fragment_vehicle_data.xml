<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentVehicleData"
    android:gravity="left"
    android:orientation="vertical"
    tools:context=".activity.VehicleDataFragment">

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imb_vehicleData_vehicleImage"
        android:src="@drawable/ic_menu_gallery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txv_vehicleData_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleData_vehicle_manufacturer"
        android:layout_below="@id/imb_vehicleData_vehicleImage"/>

    <EditText
        android:id="@+id/edt_vehicleData_manufacturer"
        android:layout_below="@id/txv_vehicleData_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/style_editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txv_vehicleData_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleData_vehicle_model"
        android:layout_below="@+id/edt_vehicleData_manufacturer" />

    <EditText
        android:id="@+id/edt_vehicleData_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/style_editText"
        android:layout_below="@+id/txv_vehicleData_model"/>

    <TextView
        android:id="@+id/txv_vehicleData_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleData_vehicle_year"
        android:layout_below="@id/edt_vehicleData_model"/>

    <EditText
        android:id="@+id/edt_vehicleData_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="4"
        android:numeric="integer"
        style="@style/style_editText"
        android:layout_below="@id/txv_vehicleData_year"/>

    <TextView
        android:id="@+id/txv_vehicleData_fuelType"
        android:layout_below="@+id/edt_vehicleData_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vehicleData_fuelType"/>

    <Spinner
        android:id="@+id/spn_vehicleData_fuelType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_vehicleData_fuelType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </Spinner>

    <Button
        android:id="@+id/btn_vehicleData_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_save"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
