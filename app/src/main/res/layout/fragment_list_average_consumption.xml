<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lyt_header_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_averageConsumption_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/style_list_values"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:text="@string/averageConsumption_date"/>


        <TextView
            android:id="@+id/item_averageConsumption_amountLiters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/style_list_values"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/averageConsumption_amountLiters"/>

        <TextView
            android:id="@+id/item_averageConsumption_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/style_list_values"
            android:textAlignment="viewEnd"
            android:maxLength="6"
            android:textStyle="bold"
            android:text="@string/averageConsumption_kmPerLiter"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lsv_averageComsumption"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/lyt_header_list"
        android:clickable="true"
        android:contextClickable="true">
    </ListView>


    <LinearLayout
        android:id="@+id/lyt_footer_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/scl_averageConsumption"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/style_list_values"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:text="@string/averageConsumption_list_generalAverage"/>

        <TextView
            android:id="@+id/txv_averageConsumption_generalAverage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/style_list_values"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:text="@null"/>

    </LinearLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_averageComsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:layout_gravity="right|bottom" />

</LinearLayout>
